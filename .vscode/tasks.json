{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "api",
      "type": "shell",
      "command": "air",
      "options": {
        "cwd": "${workspaceFolder}/services/api"
      },
      "isBackground": true, // Lets VS Code know this runs forever
      "problemMatcher": "$go"
    },
    {
      "label": "user",
      "type": "shell",
      "command": "air",
      "options": {
        "cwd": "${workspaceFolder}/services/user"
      },
      "isBackground": true, // Lets VS Code know this runs forever
      "problemMatcher": "$go"
    },
    {
      "label": "workflow",
      "type": "shell",
      "command": "air",
      "options": {
        "cwd": "${workspaceFolder}/services/workflow"
      },
      "isBackground": true, // Lets VS Code know this runs forever
      "problemMatcher": "$go"
    },
    {
      "label": "gmail-listener",
      "type": "shell",
      "command": "air",
      "options": {
        "cwd": "${workspaceFolder}/services/gmail-listener"
      },
      "isBackground": true, // Lets VS Code know this runs forever
      "problemMatcher": "$go"
    },
    {
      "label": "gmail-service",
      "type": "shell",
      "command": "air",
      "options": {
        "cwd": "${workspaceFolder}/services/gmail"
      },
      "isBackground": true, // Lets VS Code know this runs forever
      "problemMatcher": "$go"
    },
    {
      "label": "orchestrator-service",
      "type": "shell",
      "command": "air",
      "options": {
        "cwd": "${workspaceFolder}/services/orchestrator"
      },
      "isBackground": true, // Lets VS Code know this runs forever
      "problemMatcher": "$go"
    },
    {
      "label": "react-vite: dev",
      "type": "npm",
      "script": "dev",
      "path": "client",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      }
    },
    {
      "label": "app",
      "dependsOn": [
        "api",
        "user",
        "workflow",
        "orchestrator-service",
        "gmail-listener",
        "gmail-service",
        "react-vite: dev"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
